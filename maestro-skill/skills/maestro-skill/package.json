{
  "name": "maestro-skill",
  "version": "1.1.0",
  "description": "Maestro CLI wrapper for Claude Code with enhanced error handling and templates",
  "author": "ThalesMMS",
  "main": "run.js",
  "scripts": {
    "setup": "curl -fsSL \"https://get.maestro.mobile.dev\" | bash",
