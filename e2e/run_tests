#!/usr/bin/env sh
set -eu

# Runs all tests in the workspaces directory.

command -v maestro >/dev/null 2>&1 || { echo "maestro is required" && exit 1; }

[ "$(basename "$PWD")" = "e2e" ] || { echo "must be run from e2e directory" && exit 1; }

FAILED=false

_h1() {
	printf "=>\n=> $1\n=>\n"
}

_h2() {
	printf "==> $1\n"
}

# Run passing tests
for workspace_dir in ./workspaces/*; do
	app_name="$(basename "$workspace_dir")"
	_h1 "run tests for app $app_name"

	_h2 "run passing tests"
	maestro test --include-tags passing --exclude-tags ios "$workspace_dir" || { echo "==> FAIL! Expected to pass, but it failed instead" && FAILED=true; }

	# edge case: the wikipedia workspace has no failing flows
	if [ "$(basename "$workspace_dir")" = "wikipedia" ]; then
		continue
	fi

	_h2 "run failing tests"
	maestro test --include-tags failing --exclude-tags ios "$workspace_dir" && { echo "==> FAIL! Expected to fail, but it passed instead" && FAILED=true; }
done

if [ "$FAILED" = true ]; then
	_h1 "FAILURE: some tests failed!"
	exit 1
else
	_h1 "SUCCESS: all tests passed!"
fi
